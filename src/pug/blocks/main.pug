
//- angle buttons mixin
mixin angle-btn() 
	.angle__button.button__bg--left
		i.fas.fa-angle-left#js-btn-left
	.angle__button.button__bg--right 
		i.fas.fa-angle-right#js-btn-right
	

//- poster mixin
//- headline variable
-let count = -1;
mixin poster(rowNum, names)

	//- randomly selecting a year
	-const date = new Date().getFullYear()

	section(class="poster")
		+angle-btn()

		//- headline array
		-const headlines = ["latest & trending", "popular shows", "movies recommended for you"]

		h3.poster__headline
		.poster__container 
			-for(let i=1; i<=10; i++)
				.poster__item(style="background: url(../Assets/poster/"+`${rowNum}-${i}`+".jpeg); background-size: stretch;")
					.item__details
						.item__name 
							p lorem
						.item__goner 
							span horror <br>
							span= date
						.item__description 
							h6 sit Tempore quis eaque laudantium quisquam rerum enim molestias 

						//- buttons
						a(href="#" class="item__btn item__watch-cta")
							i.fas.fa-play
							span watch movie
				
						a(href="#" class="item__btn item__list-cta")
